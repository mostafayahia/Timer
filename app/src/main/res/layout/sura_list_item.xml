    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/sura_list_item_remove_button"
        android:layout_width="@dimen/sura_list_item_button_size"
        android:layout_height="@dimen/sura_list_item_button_size"
        android:background="@drawable/touch_selector_remove_button" />

