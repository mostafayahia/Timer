    <FrameLayout
        android:layout_width="@dimen/sura_list_item_button_size"
        android:layout_height="@dimen/sura_list_item_button_size">

        <Button
            android:id="@+id/sura_list_item_play_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/touch_selector_play_button"
            android:visibility="visible" />

        <Button
            android:id="@+id/sura_list_item_pause_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/touch_selector_pause_button"
            android:visibility="invisible" />

    </FrameLayout>

    <TextView
        android:id="@+id/sura_list_item_sura_text_view"
        android:layout_width="wrap_content"
